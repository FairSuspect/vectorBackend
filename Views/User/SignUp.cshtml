@model vectorBackend.Entities.User;
@{
    ViewData["Title"] = "Sign Up";
}
<h1>Добавление записи</h1>

<form asp-action="SignUp" class="col-md-6" method="POST" >
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">First Name</span>
        </div>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="Ivan" aria-label="FirstName">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Last Name</span>
        </div>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Ivanov" aria-label="LastName">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">First Name</span>
        </div>
        <input asp-for="MiddleName" type="text" class="form-control" placeholder="Ivanovich" aria-label="MiddleName">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Email</span>
        </div>
        <input asp-for="Email" type="text" class="form-control" placeholder="example@gmail.com" aria-label="Email">
    </div>
     <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text"> Group</span>
        </div>
        <input asp-for="Group" type="text" class="form-control" placeholder="Your group"
            aria-label="group">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text"> Password</span>
        </div>
        <input asp-for="Password" type="password" class="form-control" placeholder="Your strong password"
            aria-label="password">
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text"> Phone number</span>
        </div>
        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="+7 (000) 000-00-00"
            aria-label="PhoneNumber">
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit">Register</button>
    


</form>